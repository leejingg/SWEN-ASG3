            </nav>
        </div>
        <div class="bookingDetails">

            @* Add duty form *@
            <table class="dDetails">
                <th>Edit Duty<br /><br /></th>
                <tr>
                    <td>
                        <table>
                            <tr>
                                <td>Duty Type</td>
                                <td>
                                    <select>
                                        <option>Room</option>
                                        <option>General</option>
                                        <option>Estate</option>
                                        <option>Security Managment</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>Staff Name</td>
                                <td><input type="text" value="Mary Lim" required /></td>
                            </tr>
                            <tr>
                                <td>Room ID</td>
                                <td><input type="number" value="23" required /></td>
                            </tr>
                            <tr>
                                <td>Schedule for duty</td>
                                <td><input type="datetime-local" value="2018-12-23T13:00" required /></td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    Additional Remarks <br />
                                    <div class="note"><textarea style="width:300px;" rows="5">Extra Bed</textarea></div>
                                </td>
                            </tr>
                            <tr>
                                <td><input type="button" value="Save" onclick="submit()" /></td>
                                <td></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>

<script>
    function submit() {
        alert("Duty Assigned!");
